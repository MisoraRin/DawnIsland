<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/jump_to_first_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:text="首页"
        app:layout_constraintBottom_toBottomOf="@+id/jump_to_page"
        app:layout_constraintEnd_toStartOf="@+id/jump_to_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/jump_to_page" />

    <EditText
        android:id="@+id/jump_to_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="2"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/jump_to_end_page"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/jump_to_first_page"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jump_to_end_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:text="尾页"
        app:layout_constraintBottom_toBottomOf="@+id/jump_to_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/jump_to_page"
        app:layout_constraintTop_toTopOf="@+id/jump_to_page" />

    <TextView
        android:id="@+id/total_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jump_to_page" />
</androidx.constraintlayout.widget.ConstraintLayout>
